<section {{ section_id ? (('id="' ~ section_id)|replace({ ' ': '-', '#': '' })|lower) ~ '"' : '' }}
  class="horizontal-cta {{ background_color }}">
  <div class="container">
    <div class="row align-items-center">
      <div class="col__text col-lg-{{ division.text }}">
        <h2 class="h1 title">
          {{ title }}
        </h2>
        <p class="large">
          {{ description }}
        </p>
        {% if button.title %}
          <a href="{{ button.url }}" class="button button--rise">{{ button.title }}</a>
        {% endif %}
      </div>
      <div class="col__image col-lg-{{ division.image }}">
        {{ renderComponent('Image', { image: image }) }}
      </div>
    </div>
  </div>
</section>
