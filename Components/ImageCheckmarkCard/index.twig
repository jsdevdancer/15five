<section class="image-checkmark-card {{ background_color }}">
  <div class="container">
    <div class="row">
      {% if heading %}
      <div class="heading col-12 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">
        <h2 class="h1 o-title">{{ heading }}</h2>
      </div>
      {% endif %}
      <div class="col-12 col-lg-10 offset-lg-1">
        <div class="card-container">
          {% for card in cards %}
            {{
              renderComponent(
                'CheckmarkCard',
                { has_image: true, display: card.display_image , image: card.image, title: card.title, description: card.description }
              )
            }}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
