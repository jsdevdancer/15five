<section class="microsite-agenda" {% if section_id %}id="{{ section_id }}"{% endif %}>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2 class="h1">
          {{ title }}
        </h2>
      </div>
    </div>
    {% for day in agenda_day %}
      <div class="row">
        <div class="col-12">
          <div class="agenda-day">
            <div class="row">
              <div class="col-12 col-md-3">
                <h3 class="h2 agenda-date">{{ day.agenda_date }}</h3>
              </div>
              <div class="sessions col-12 col-md-8 offset-md-1">
                {% for session in day.agenda_session %}
                  <div class="row">
                    <h3 class="col-12 col-md-4">
                      {{ session.session_time }}
                    </h3>
                    <div class="session-details col-12 col-md-8">
                      <h3>{{ session.session_title }}</h3>
                      <p>{{ session.session_speakers }}</p>
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
