<section class="solutions-box-hero">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-10 offset-lg-1">
        <div class="box-container d-flex flex-wrap">
          <div class="col-12 col-md-6 text-col d-flex flex-column align-items-center justify-content-center">
            <div class="text">
              <h2 class="h2 title">
                {{ title }}
              </h2>
              <div class="description">
                {{ description }}
              </div>
            </div>
          </div>
          <div class="col-12 col-md-6 d-flex align-items-center justify-content-center image-col {{ background_color }}">
            <div class="image">
              {{ renderComponent('Image', { image: image }) }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
