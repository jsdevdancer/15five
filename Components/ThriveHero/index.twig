<section class="thrive-hero text-center" {% if section_id %}id="{{ section_id }}"{% endif %}>
  <div class="container">
    <div class="row">
      <div class="col-md-6 thrive-hero--logo-wrapper">
        <div class="thrive-hero--logo-wrapper_logo zoomIn animation"> 
          {{ renderComponent('Image', { image: logo }) }}
        </div>
        <div class="thrive-hero--logo-wrapper_tagline">
          {{ renderComponent('Image', { image: tagline }) }}
        </div>
      </div>
      <div class="col-md-6 thrive-hero--content-wrapper">
        <h2 class="thrive-hero--content-wrapper_headline">
          {{ headline }}
        </h2>
        <p class="thrive-hero--content-wrapper_description">
          {{ description }}
        </p>
        <div class="thrive-hero--content-wrapper--btns-wrapper">
          <a href="{{ primary_button.url }}" class="thrive-hero--content-wrapper--btns-wrapper_primary-btn"
          {{ primary_button.target == '_blank' ? 'target="_blank" rel="noopener noreferrer"' }}>{{ primary_button.title }}</a>
          <a href="{{ secondary_button.url }}" class="thrive-hero--content-wrapper--btns-wrapper_secondary-btn"
          {{ secondary_button.target == '_blank' ? 'target="_blank" rel="noopener noreferrer"' }}>{{ secondary_button.title }}</a>
        </div>
      </div>
    </div>
  </div>
</section>
