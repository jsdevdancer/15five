<section class="confetti-banner {{ background_color }}">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="banner-wrapper" style="--hero-bg-color:{{ bg_color }};--text-color:{{ text_color }}">
          <div class="text-wrapper">
            <div class="title h2">
              {{ title }}
            </div>
            {% if description %}
              <p>{{ description }}</p>
            {% endif %}
            <a class="button button--rise"
              href="{{ button.url }}"
              {{ button.target == '_blank' ? 'target="_blank" rel="noopener noreferrer"' }}
              aria-label="{{ aria_label }}"
            >
              {{ button.title }}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
