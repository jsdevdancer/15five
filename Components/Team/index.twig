<section class="team {{ team_bg_color }}" {% if section_id %}id="{{ section_id }}"{% endif %}>
  <div class="container">
    {% if title %}
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3">
          <h2 class="h1 title">
            {{ title }}
          </h2>
        </div>
      </div>
    {% endif %}
    <div class="team-members-container">
      <div class="row justify-content-center">
        {% for member in team %}
          <div class="col-12 col-md-6 col-lg-4 col-xl-3">
            {% include 'Partials/team_member.twig' with { member: member } %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
