<section class="big-cards {{ background_color }} {{ card_layout }}" {% if section_id %}id="{{ section_id }}"{% endif %}>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="heading-text">
          {% if kicker %}
            <div class="h4 kicker o-kicker d-none d-md-block">
              {{ kicker }}
            </div>
          {% endif %}
          <h2 class="h1 title">
            {{ title }}
          </h2>
          {% if description %}
            <p class="col-md-6 description large">
              {{ description }}
            </p>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      {% for card in cards %}
        <div class="card-wrapper col-12 col-md-6">
          {% include 'Partials/card.twig' with { card: card, card_layout: card_layout } %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
