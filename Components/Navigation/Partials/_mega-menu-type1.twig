{% set left_panel = item.meta('type1_mega_menu').left_panel %}
{% set right_panel = item.meta('type1_mega_menu').right_panel %}

<div class="container-lg">
  <div class="row">
    <div class="col">
      <div class="panel__wrapper">
        <div class="panel panel--left {{ (left_panel.links|length) <= 4 ? 'two-cols' }}">
          <ul class="navbar__submenu" role="menu">
            {% for left_panel_link in left_panel.links %}
              {% set title = left_panel_link.link.title.title %}
              {% set url = left_panel_link.link.title.url %}
              {% set target = left_panel_link.link.title.target %}
              {% set aria_label = left_panel_link.link.aria_label %}
              {% set description = left_panel_link.link.description %}

              <li class="navbar__submenu__item" role="none">
                <a class="navbar__submenu__link"
                  href="{{ url }}"
                  {{ target == '_blank' ? 'target="_blank" rel="noopener noreferrer"' }}
                  aria-label="{{ aria_label ? aria_label : description }}" role="menuitem">
                  <span class="title">{{ title }}</span>
                  <div class="description">
                    {{ description }}
                  </div>
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
        {% set show_on_mobile = right_panel.show_on_mobile %}
        <div class="panel panel--right {{ (left_panel.links|length) <= 4 ? 'wide' }} {{
          show_on_mobile
            ? 'show-on-mobile'
          }}">
          {% set title = right_panel.title %}
          {% set description = right_panel.description %}

          <div class="lead">
            <div class="title">
              {{ title }}
            </div>
            <div class="description">
              {{ description }}
            </div>
          </div>
          <ul class="navbar__submenu" role="menu">
            {% for right_panel_link in right_panel.links %}
              {% set title = right_panel_link.link.title.title %}
              {% set url = right_panel_link.link.title.url %}
              {% set target = right_panel_link.link.title.target %}
              {% set aria_label = right_panel_link.link.aria_label %}
              {% set description = right_panel_link.link.description %}

              <li class="navbar__submenu__item" role="none">
                <a class="navbar__submenu__link"
                  href="{{ url }}"
                  {{ target == '_blank' ? 'target="_blank" rel="noopener noreferrer"' }}
                  aria-label="{{ aria_label ? aria_label : description ? description : title }}" role="menuitem">
                  <span class="title">{{ title }}</span>
                  {% if description %}
                    <div class="description">
                      {{ description }}
                    </div>
                  {% endif %}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
