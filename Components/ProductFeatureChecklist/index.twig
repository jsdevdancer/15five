<section class="product-feature-checklist">
  <div class="container">
    {% if image.desktop.one_x.old_format %}
      <div class="row">
        <div class="col-12 col-md-4 col-lg-3 offset-lg-1">
          <div class="image">
            {{ renderComponent('Image', { image: image }) }}
          </div>
        </div>
      </div>
    {% endif %}
    <div class="row">
      <div class="col-9 col-lg-3 offset-lg-1 title-col">
        <div class="h4 kicker o-kicker">
          {{ kicker }}
        </div>
        <h2 class="h3 title o-title">
          {{ title }}
        </h2>
      </div>
      <div class="col-12 col-lg-7 check-col">
        <div class="row">
          {% for item in checklist %}
            {% include 'Partials/check-item.twig' with { check: item } %}
            {% if loop.index is divisible by(3) and not loop.last %}
              </div>
              <div class="row">
            {% endif %}
            {% if loop.last %}
              </div>
            {% endif %}
          {% endfor %}
      </div>
    </div>
  </div>
</section>
