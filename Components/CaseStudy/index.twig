<section class="case-study">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12 col-md-5 col-lg-4 offset-lg-1">
        <div class="h4 kicker">
          {{ kicker }}
        </div>
        <h2 class="h2 title">
          {{ title }}
        </h2>
        <p class="large--desktop">
          {{ description }}
        </p>

        {% if quote %}
        <p class="quote large--desktop">
          {{ quote }}
        </p>
        {% endif %}

        {% if quote_name %}
        <p class="quote-name small m-0">
          {{ quote_name }}
        </p>
        {% endif %}

        {% if quote_company %}
        <p class="quote-company small">
          {{ quote_company }}
        </p>
        {% endif %}

        <a href="{{ button.url }}"
          class="button button--tide1"
          {{ button.target ? 'target="_blank" rel="noopener noreferrer"' }}
          aria-label="{{ aria_label }}">
          {{ button.title }}
        </a>
      </div>
      <div class="col-12 col-md-6 offset-md-1 col-lg-5">
        <div class="case-study-card {{ card_style }}">
          <div class="card-container d-flex flex-column justify-content-between">
            <div class="card-header d-flex flex-no-wrap align-items-center">
              <div class="card-logo d-flex align-items-center">
                <img src="{{ card_logo.src }}" alt="{{ card_logo.alt }}" />
              </div>
              <div class="h6 card-label u-no-vertical-space">
                {{ card_label }}
              </div>
            </div>
            <div class="h2 card-title">
              {{ card_title }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
