<section class="why-15five">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 offset-lg-1">
        {% if kicker %}
          <div class="o-kicker h4">
            {{ kicker }}
          </div>
        {% endif %}
        <h2 class="o-title h1">
          {{ title }}
        </h2>
        {% if link.url %}
          <a class="button button--text button--text--white light-focus"
            href="{{ link.url }}"
            {{ link.target == '_blank' ? 'target="_blank" rel="noopener noreferrer"' }}
            aria-label="{{ aria_label }}">
            {{ link.title }}
          </a>
        {% endif %}
      </div>
      <div class="col-lg-5">
        {{ renderComponent('Image', { image: image }) }}
      </div>
    </div>
    {% for row in reasons_rows %}
      <div class="row reasons">
        <div class="col-lg-3 offset-lg-1">
          <h3 class="cornbread-honey">
            {{ row.reason1.title }}
          </h3>
          <p>
            {{ row.reason1.description }}
          </p>
        </div>
        <div class="col-lg-3">
          <h3 class="cornbread-honey">
            {{ row.reason2.title }}
          </h3>
          <p>
            {{ row.reason2.description }}
          </p>
        </div>
        <div class="col-lg-3">
          <h3 class="cornbread-honey">
            {{ row.reason3.title }}
          </h3>
          <p>
            {{ row.reason3.description }}
          </p>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
