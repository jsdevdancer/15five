<section class="thrive-agenda-hero" {% if section_id %}id="{{ section_id }}"{% endif %}>
  <div class="container">
    <div class="row">
      <div class="col text-center">
        <h2 class="o-title h1">
          {{ title }}
        </h2>
        <p class="description">
          {{ description }}
        </p>
      {% if button %}
        <a href='{{ button.url}}' class='button'
        {{ button.target == '_blank' ? 'target="_blank" rel="noopener noreferrer"' }}>
        {{ button.title}}
        </a>
      {% endif %}
      </div>
    </div>
  </div>
</section>