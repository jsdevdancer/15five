<section class="two-column-resource-links">
  <div class="container">
    <div class="row align-items-md-end">
      <div class="col-12 col-md-8 col-lg-7 offset-lg-1">
        <h2 class="h1 title">
          {{ title }}
        </h2>
      </div>
      <div class="col-12 col-md-4 col-lg-3">
        <div class="image">
          {{ renderComponent('Image', { image: image }) }}
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-md-6 col-lg-5 offset-lg-1">
        <div class="resources-col left">
          <h3 class="h3 resources-title">
            {{ left_title }}
          </h3>
          <div class="resources-description">
            {{ left_description }}
          </div>
          <div class="resources">
            {% for link in left_resources %}
              <a href="{{ link.resource.url }}"
                class="button button--text resource-link"
                {{ link.resource.target ? 'target="_blank" rel="noopener noreferrer"' }}>
                {{ link.resource.title }}
              </a>
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="col-12 col-md-6 col-lg-5">
        <div class="resources-col right">
          <h3 class="h3 resources-title">
            {{ right_title }}
          </h3>
          <div class="resources-description">
            {{ right_description }}
          </div>
          <div class="resources">
            {% for link in right_resources %}
              <a href="{{ link.resource.url }}"
                class="button button--text resource-link"
                {{ link.resource.target ? 'target="_blank" rel="noopener noreferrer"' }}>
                {{ link.resource.title }}
              </a>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
